<h1>Articulos publicados</h1>
<div class="row">
    
    <% @articles.each do |article| %>
        <div class="card text-center col-sm-4">
        <div class="card-header">
            Publicado por: <%= article.author %>
        </div>
        <div class="card-body">
            <h5 class="card-title"> <%= article.title %> </h5>
            <p class="card-text"> <%= article.description %> </p>
            <%= link_to 'Editar', edit_article_path(article.id), class: "btn btn-success" %>
            <%= link_to 'Show', article_path(article.id), class: "btn btn-success" %>
            <%= link_to 'Delete', article_path(article.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

        </div>
        <div class="card-footer text-muted">
            Última edición hace: <%= (((Time.now - article.updated_at).abs)/86400).round %> días
        </div>  
        </div>
    <% end %>

</div>